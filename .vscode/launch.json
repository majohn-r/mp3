    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package no-args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}\\cmd\\mp3",
            "program": "${workspaceFolder}\\cmd\\mp3"
        },
        {
            "name": "Launch Package error",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}\\cmd\\mp3",
            "program": "${workspaceFolder}\\cmd\\mp3",
            "args": ["foo"]
        },
        {
            "name": "Launch Package repair",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}\\cmd\\mp3",
            "program": "${workspaceFolder}\\cmd\\mp3",
            "args": ["repair"]
        },
        {
            "name": "Launch Package ls",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}\\cmd\\mp3",
            "program": "${workspaceFolder}\\cmd\\mp3",
            "args": ["ls", "-artist=true", "-album=false", "-track=true", "-sort=numeric"]
        },
        {
            "name": "Launch Package check",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}\\cmd\\mp3",
            "program": "${workspaceFolder}\\cmd\\mp3",
            "args": ["check", "-integrity=false"]
        }
    ]
}